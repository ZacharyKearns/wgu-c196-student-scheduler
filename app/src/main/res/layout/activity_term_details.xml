<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/term_details_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/term_title"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_margin="8dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:id="@+id/term_start"
        android:layout_below="@id/term_title">
        <TextView
            android:id="@+id/term_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_date_label"
            android:textColor="#000"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/term_start_date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_format"
            android:textSize="25sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/term_start"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:id="@+id/term_end">

        <TextView
            android:id="@+id/term_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_date_label"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/term_end_date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/date_format"
            android:textSize="25sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_view_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/term_end"
        android:onClick="viewCoursesButtonClick"
        android:text="@string/button_view_courses"
        android:layout_margin="8dp"/>

</RelativeLayout>